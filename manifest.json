{
  "name": "My Lands Army Optimizer",
  "version": "0.2.0",
  "description": "Extension for Your Rules calculator",
  "manifest_version": 2,
  "icons": {
    "16": "icons/minion.png",
    "32": "icons/minion.png",
    "48": "icons/minion.png",
    "128": "icons/minion.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/minion.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.your-rules.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "http://www.your-rules.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}